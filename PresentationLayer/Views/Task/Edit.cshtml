@model PresentationLayer.Models.TaskListViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Task";
}

<h2>Edit Task</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>Description (optional)</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label>Due Date</label>
        <input asp-for="DueDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Category</label>
        <select asp-for="CategoryId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Categories, "Id", "Title"))">
        </select>
    </div>

    <div class="form-group form-check mt-2">
        <input asp-for="IsCompleted" class="form-check-input" />
        <label asp-for="IsCompleted" class="form-check-label">Completed</label>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
