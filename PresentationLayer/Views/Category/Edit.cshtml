@model BusinessLayer.Category

<h2>Edit Category</h2>

<form method="post">
    <input type="hidden" value="@Model.Id" />

    <div class="mb-3">
        <label>Name</label>
        <input name="title" class="form-control" value="@Model.Title" />
        @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label>Color</label>
        <input name="color" class="form-control" type="color" value="@Model.Color" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
</form>
