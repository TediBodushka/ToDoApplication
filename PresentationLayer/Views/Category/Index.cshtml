@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create new category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>No.</th>
            <th>Color</th>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
        }
        @foreach (var cat in Model)
        {
            <tr>
                <td>@i</td>

                
                <td>
                    <div style="
                            width: 40px;
                            height: 25px;
                            border-radius: 5px;
                            background:@cat.Color;
                            border: 1px solid #ccc;">
                    </div>
                </td>

                <td>
                    <div style="
                            background:@cat.Color;
                            color: white;
                            padding: 6px 10px;
                            border-radius: 6px;
                            display: inline-block;">
                        @cat.Title
                    </div>
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@cat.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@cat.Id">Delete</a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
