@model CalendarViewModel
@section Styles {
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Calendar";

    var month = Model.CurrentMonth;
    var daysInMonth = DateTime.DaysInMonth(month.Year, month.Month);
    var firstDay = new DateTime(month.Year, month.Month, 1);
    var firstWeekday = (int)firstDay.DayOfWeek;
}
<div class="dashboard-container p-3">
    <h2 class="mb-4">Calendar</h2>

    <!-- 📌 МЕСЕЧНА НАВИГАЦИЯ -->
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:15px;">
        <a asp-action="Calendar" asp-controller="Home"
           asp-route-date="@Model.CurrentMonth.AddMonths(-1).ToString("yyyy-MM-dd")"
           style="font-size:24px; text-decoration:none;">←</a>

        <h3 style="margin:0;">@Model.CurrentMonth.ToString("MMMM yyyy")</h3>

        <a asp-action="Calendar" asp-controller="Home"
           asp-route-date="@Model.CurrentMonth.AddMonths(1).ToString("yyyy-MM-dd")"
           style="font-size:24px; text-decoration:none;">→</a>
    </div>

    <table class="table calendar-table text-center">
        <thead>
            <tr>
                <th>Sun</th><th>Mon</th><th>Tue</th>
                <th>Wed</th><th>Thu</th><th>Fri</th><th>Sat</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @for (int i = 0; i < firstWeekday; i++)
                {
                    <td></td>
                }

                @for (int day = 1; day <= daysInMonth; day++)
                {
                    if ((firstWeekday + day - 1) % 7 == 0)
                    {
                        @:</tr><tr>
                    }

                    var tasksToday = Model.Tasks.Where(t =>
                        t.DueDate.HasValue &&
                        t.DueDate.Value.Date == new DateTime(month.Year, month.Month, day)
                    ).ToList();

                    <td class="calendar-day-cell">

                        <!-- 📌 ДОБАВЕН САМО ISO формат -->
                        <a asp-action="Calendar"
                           asp-controller="Home"
                           asp-route-date="@(new DateTime(month.Year, month.Month, day).ToString("yyyy-MM-dd"))"
                           class="day-number @(Model.SelectedDate.Date == new DateTime(month.Year, month.Month, day) ? "selected-day" : "")">
                            @day
                        </a>

                        @if (tasksToday.Any())
                        {
                            <div class="mini-dot"></div>
                        }
                    </td>
                }
            </tr>
        </tbody>
    </table>

    <h4 class="mt-4">Tasks on @Model.SelectedDate.ToString("MMM d")</h4>

    @if (!Model.Tasks.Any(t => t.DueDate.HasValue && t.DueDate.Value.Date == Model.SelectedDate.Date))
    {
        <div class="center-empty mt-4">
            No tasks on this day.
        </div>
    }
    else
    {
        <div class="task-list">
            @foreach (var task in Model.Tasks.Where(t => t.DueDate.HasValue && t.DueDate.Value.Date == Model.SelectedDate.Date))
            {
                var color = task.Category?.Color ?? "#3b82f6";

                <!-- 📌 САМО ДОБАВЕНО подравняване вляво, нищо НЕ е премахнато -->
                <a asp-action="TaskDetails" asp-route-id="@task.Id"
                   class="task-card"
                   style="background:@color; text-align:left; display:flex; flex-direction:column; align-items:flex-start; padding:18px;">
                    <span style="font-weight:600; font-size:18px; margin-bottom:5px;">@task.Title</span>
                    <span style="font-size:14px; opacity:0.9;">@task.DueDate?.ToString("MMM d, yyyy")</span>
                </a>
            }
        </div>
    }

    <div class="bottom-nav mt-5">
        <a asp-action="Index" asp-controller="Home">Tasks</a>
        <a asp-action="Calendar" asp-controller="Home" class="active">Calendar</a>
        <a asp-action="Profile" asp-controller="Home">Me</a>
    </div>
</div>
