@{
    ViewData["Title"] = "New category";
}

<style>
    .color-option {
        width: 40px;
        height: 30px;
        border: 2px solid transparent;
        cursor: pointer;
        border-radius: 4px;
    }

    input[type="radio"] {
        display: none;
    }

        input[type="radio"]:checked + .color-option {
            border: 3px solid black;
        }
</style>

<div class="modal-page">
    <div class="modal-card">
        <h2>New category</h2>

        <form asp-action="CreateCategory" method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input name="title" class="form-control" placeholder="Enter category name" />
            </div>

            <div class="mb-3">
                <label class="form-label">Color</label>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var color in new[] { "blue", "purple", "orange", "pink", "green", "red" })
                    {
                        <label>
                            <input type="radio" name="color" value="@color">
                            <div class="category-card card-@color color-option"></div>
                        </label>
                    }
                </div>
            </div>

            <div class="modal-footer">
                <a asp-action="Index" class="btn-pill btn-gray">Cancel</a>
                <button type="submit" class="btn-pill btn-green">Add</button>
            </div>
        </form>
    </div>
</div>
