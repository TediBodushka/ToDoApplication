@model PresentationLayer.Models.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<h2 class="mb-4">My Stats</h2>

<div class="card p-4 shadow" style="width:350px;">
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between">
            <span>Total tasks:</span>
            <strong>@Model.TotalTasks</strong>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <span>Completed:</span>
            <strong>@Model.FinishedTasks</strong>
        </li>
        <li class="list-group-item d-flex justify-content-between">
            <span>Categories:</span>
            <strong>@Model.Categories</strong>
        </li>
    </ul>
</div>

<a asp-action="Index" class="btn btn-primary mt-3">z Back to Dashboard</a>
