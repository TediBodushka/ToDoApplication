@model PresentationLayer.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
    var actionName = ViewContext.RouteData.Values["Action"]?.ToString();
}

<div class="dashboard-container container pt-4">
    <h3>Profile</h3>

    <div class="mt-3">
        <div class="profile-card">
            <label class="form-label mb-1">Name</label>
            <div>@Model.Name</div>
        </div>

        <div class="d-flex flex-wrap gap-3 mt-3">
            <div class="category-card card-green" style="box-shadow:none;min-width:160px;">
                <div class="category-title">Completed</div>
                <div class="category-count">@Model.CompletedCount task@(Model.CompletedCount == 1 ? "" : "s")</div>
            </div>

            <div class="category-card card-red" style="box-shadow:none;min-width:160px;">
                <div class="category-title">Not Completed</div>
                <div class="category-count">@Model.NotCompletedCount task@(Model.NotCompletedCount == 1 ? "" : "s")</div>
            </div>
        </div>
    </div>
</div>

<nav class="bottom-nav">
    <a asp-controller="Home" asp-action="Index"
       class="@(actionName == "Index" ? "active" : "")">
        <span>Tasks</span>
    </a>
    <a asp-controller="Home" asp-action="Calendar"
       class="@(actionName == "Calendar" ? "active" : "")">
        <span>Calendar</span>
    </a>
    <a asp-controller="Home" asp-action="Profile"
       class="@(actionName == "Profile" ? "active" : "")">
        <span>Me</span>
    </a>
</nav>
