@model BusinessLayer.TaskItem
@using Microsoft.AspNetCore.Mvc.Rendering
@using BusinessLayer

<div class="modal-page">
    <div class="modal-card">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h2>Task details</h2>

            <a asp-action="DeleteTask" asp-route-id="@Model.Id" onclick="return confirm('Delete?')"
               class="btn btn-link text-danger">
                🗑️
            </a>
        </div>

        <form asp-action="EditTask" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />

            <label>Title</label>
            <input asp-for="Title" class="form-control" />

            <label>Category</label>
            <select asp-for="CategoryId" class="form-select"
                    asp-items="@(new SelectList(ViewBag.Categories, "Id", "Title"))">
            </select>

            <label>Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>

            <label>Due date</label>
            <input asp-for="DueDate" type="date" class="form-control" />

            <div class="modal-footer mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn-pill btn-gray">Cancel</a>
                <button type="submit" class="btn-pill btn-green">Save</button>
            </div>
        </form>
    </div>
</div>
